{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "extends": [
        "standard",
        "angular"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "block-scoped-var": [
            "error"
        ],
        "curly": [
            "error",
            "all"
        ],
        "eqeqeq": 2,
        "guard-for-in": 2,
        "no-alert": 2,
        "no-empty-function": 2,
        "no-proto": 2,
        "no-redeclare": 2,
        "radix": 2,
        "vars-on-top": 2,
        "space-before-function-paren": ["error", "never"]
    }
}
